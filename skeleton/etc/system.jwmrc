<?xml version="1.0"?>

<JWM>

    <!-- The root menu. -->
    <RootMenu height="32">
        <Program icon="home.png" label="Home">rox</Program>
        <Program icon="terminal.png" label="Terminal">xscreen</Program>
        <Program icon="execute.png" label="Execute...">grun</Program>
        <Menu icon="directory_execute.png" label="Applications">
            <Program icon="edit.png" label="gtkedit">gtkedit</Program>
            <Program icon="chat.png" label="X-Chat">xchat</Program>
            <Program icon="mail.png" label="Sylpheed">sylpheed</Program>
            <Program icon="audio.png" label="Xhippo">xhippo</Program>
            <Program icon="paint.png" label="mtPaint">mtpaint</Program>
        </Menu>
        <Program icon="install.png" label="Manage applications">lpackage</Program>
        <Separator/>
        <Desktops icon="desktop.png"/>
        <Separator/>
        <Restart label="Restart" icon="refresh.png"/>
        <Exit label="Exit" confirm="false" icon="quit.png"/>
    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Name>ROX-Filer</name>
        <Option>icon:directory.png</Option>
    </Group>
    <Group>
        <Name>aterm</Name>
        <Option>icon:terminal.png</Option>
    </Group>
    <Group>
        <Name>gtkedit</Name>
        <Option>icon:edit.png</Option>
    </Group>
    <Group>
        <Name>lpackage</Name>
        <Option>icon:install.png</Option>
    </Group>
    <Group>
        <Name>dillo</Name>
        <Option>icon:internet.png</Option>
    </Group>
    <Group>
        <Name>xchat</Name>
        <Option>icon:chat.png</Option>
    </Group>
    <Group>
        <Name>sylpheed</Name>
        <Option>icon:mail.png</Option>
    </Group>
    <Group>
        <Name>xhippo</Name>
        <Option>icon:audio.png</Option>
    </Group>
    <Group>
        <Name>mtpaint</Name>
        <Option>icon:paint.png</Option>
    </Group>

    <!-- Trays at the bottom. -->
    <Tray y="-1" height="64" border="0" halign="center" autohide="false">
        <TrayButton border="false" icon="puppy.png">root:1</TrayButton>
        <TrayButton icon="home.png">exec:rox</TrayButton>
        <TrayButton icon="terminal.png">exec:aterm</TrayButton>
        <TrayButton icon="edit.png">exec:gtkedit</TrayButton>
        <TrayButton icon="install.png">exec:lpackage</TrayButton>
        <TrayButton icon="internet.png">exec:dillo</TrayButton>
        <TrayButton icon="chat.png">exec:xchat</TrayButton>
        <TrayButton icon="mail.png">exec:sylpheed</TrayButton>
        <TrayButton icon="audio.png">exec:xhippo</TrayButton>
        <TrayButton icon="paint.png">exec:mtpaint</TrayButton>
    </Tray>

    <Tray layout="vertical" halign="right" y="-1">
        <Dock/>
        <Clock format="%H:%M"/>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>*-terminus-medium-*-14-*</Font>
        <Width>3</Width>
        <Height>20</Height>
        <Active>
            <Text>#dddddd</Text>
            <Title>#333333</Title>
            <Outline>#111111</Outline>
            <Opacity>1.0</Opacity>
        </Active>
        <Inactive>
            <Text>#dddddd</Text>
            <Title>#000000</Title>
            <Outline>#333333</Outline>
            <Opacity>1.0</Opacity>
        </Inactive>
    </WindowStyle>
    <TrayStyle>
        <Font>*-terminus-medium-*-14-*</Font>
        <Background>#000000</Background>
        <Foreground>#dddddd</Foreground>
        <Opacity>1.0</Opacity>
    </TrayStyle>
    <TaskListStyle>
        <Font>*-terminus-medium-*-14-*</Font>
        <ActiveForeground>#ffffff</ActiveForeground>
        <ActiveBackground>#555555</ActiveBackground>
        <Foreground>#dddddd</Foreground>
        <Background>#333333</Background>
    </TaskListStyle>
    <PagerStyle>
        <Outline>#000000</Outline>
        <Text>#dddddd</Text>
        <Foreground>#333333</Foreground>
        <Background>#181515</Background>
        <ActiveForeground>#555555</ActiveForeground>
        <ActiveBackground>#333333</ActiveBackground>
    </PagerStyle>
    <MenuStyle>
        <Font>*-terminus-medium-*-14-*</Font>
        <Foreground>#dddddd</Foreground>
        <Background>#000000</Background>
        <ActiveForeground>#dddddd</ActiveForeground>
        <ActiveBackground>#333333</ActiveBackground>
        <Opacity>1.0</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>*-terminus-medium-*-14-*</Font>
        <Outline>#000000</Outline>
        <Foreground>#dddddd</Foreground>
        <Background>#000000</Background>
    </PopupStyle>
    <ClockStyle>
        <Font>*-terminus-medium-*-32-*</Font>
    </ClockStyle>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>
        /usr/share/pixmaps
    </IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="4" height="1">
        <!-- Default background. Note that a Background tag can be
              contained within a Desktop tag to give a specific background
              for that desktop.
         -->
        <Background type="gradient">#010101:#181515</Background>
    </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>click</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="10">screen</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode coordinates="window">outline</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode coordinates="window">outline</ResizeMode>

    <!-- Startup commands -->
    <StartupCommand>conky</StartupCommand>

    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <Key mask="A" key="Tab">nextstacked</Key>
    <Key mask="A" key="F4">close</Key>
    <Key mask="A" key="#">desktop#</Key>
    <Key mask="A" key="F1">root:1</Key>
    <Key mask="A" key="F2">exec:grun</Key>
    <Key mask="A" key="F10">maximize</Key>
    <Key mask="A" key="Right">rdesktop</Key>
    <Key mask="A" key="Left">ldesktop</Key>
    <Key mask="A" key="Up">udesktop</Key>
    <Key mask="A" key="Down">ddesktop</Key>

    <Key mask="4" key="Up">maximize</Key>
    <Key mask="4" key="Down">minimize</Key>
    <Key mask="4" key="d">showdesktop</Key>
    <Key mask="4" key="r">exec:grun</Key>
    <Key mask="4" key="t">exec:xscreen</Key>
    <Key mask="A" key="Return">exec:xscreen</Key>
</JWM>
